# API Configuration
# Set this to your API Gateway URL
# Development: NEXT_PUBLIC_API_URL=http://localhost:9400
# Production: NEXT_PUBLIC_API_URL=https://module-quick-hr-7ou2.onrender.com
NEXT_PUBLIC_API_URL=http://localhost:9400

# API Logging
# Set to "true" or "1" to enable API request/response logging in console (includes cURL commands)
# Set to "false" or "0" to disable logging
NEXT_PUBLIC_API_LOG_ENABLED=false

# API Availability
# Set to "true" when backend API endpoints are available
# Set to "false" or leave unset to use fallback data
NEXT_PUBLIC_API_AVAILABLE=false

